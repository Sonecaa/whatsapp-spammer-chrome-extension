{
  "manifest_version": 4,
  "name": "whatsapp-spammer-chrome-extension",
  "description": "Whatsapp Spammer Chrome Extension",
  "version": "1",
  "author": "skarioasto",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' 'sha256-WOdSzz11/3cpqOdrm89LBL2UPwEU9EhbDtMy2OciEhs='",
  "browser_action": {
    "default_title": "Whatsapp Spammer Chrome Extension",
    "default_popup": "init.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "assets/js/main.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}